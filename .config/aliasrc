# JCF's aliasrc

alias -g vim=nvim

# Global aliases
alias -g G="| grep"
alias -g L="| less"

#
alias -g emax="emacsclient -t"
alias -g emaxu="sudo emacsclient -t"
alias -g emaxv="emacsclient -c -a emacs"

# Dotfiles repository command
alias -g cfg="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"
#
# Suffix aliases
alias -s txt=code
